{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"target": "ES2015",
		"module": "ESNext",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"types": ["@storybook/react"],
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitAny": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"emitDeclarationOnly": false,
		"sourceMap": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"storybook-static",
		"**/*.stories.tsx",
		"**/*.test.tsx"
	],
	"include": ["src/**/*"]
}
